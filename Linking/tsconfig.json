{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES6", "ES2017"],
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro_config.js",
    "jest.config.js"
  ]
}
